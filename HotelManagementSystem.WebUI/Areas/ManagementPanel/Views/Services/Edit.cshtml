@model HotelManagementSystem.WebUI.Models.Service

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12 col-lg-12">
        <div class="card border-lg-top-primary">
            <div class="card-body p-5">
                <div class="card-title d-flex align-items-center">
                    <div>
                        <i class="bx bx-table mr-1 font-24 text-primary"></i>
                    </div>
                    <h4 class="mb-0 text-primary">Servis Düzenle</h4>
                </div>
                <hr>

                @using(Html.BeginForm("Edit", "Services", FormMethod.Post, new { @enctype = "multipart/form-data" })) {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ServiceId)

                        <div class="form-body">

                            <div class="form-group">
                                <label>Fotoğraf</label>
                                <input type="file" class="form-control" id="img" name="img">
                                @Html.ValidationMessageFor(model => model.ImageURL, "", new { @class = "valid-feedback" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, "Adı", htmlAttributes: new { @class = "control-label" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.Label("IsActive", "Durumu", htmlAttributes: new { @class = "control-label" })
                                <div class="input-group">
                                    <div class="checkbox">
                                        @Html.DropDownListFor(c => c.IsActive, new SelectList(
                                            new[]
                                            {
                                                new { Value = "true", Text = "Aktif" },
                                                new { Value = "false", Text = "Pasif" },
                                            },
                                            "Value",
                                            "Text",
                                            1
                                            ), new { @class = "form-control" })
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                            </div>

                            <button type="submit" class="btn btn-primary px-5">Kaydet</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
