
@using HotelManagementSystem.WebUI.Models
@model IEnumerable<HotelManagementSystem.WebUI.Models.RoomByCategory>

@{
    var categories = TempData["CategoryIdList"] as List<Category>;
}


@foreach(var item in categories) {
    bool isExist = false;
    if(Model != null) {
        foreach(var categ in Model) {
            if(categ.CategoryId == item.CategoryId) {
                isExist = true;
            }
        }
        if(isExist) {
            <div class="form-check form-check-inline">
                <input class="form-check-input categorycheck" type="checkbox" id="@item.CategoryId" value="@item.CategoryId" name="categoryList" checked>
                <label class="form-check-label" for="inlineCheckbox1">@item.Name</label>
            </div>
        }
        else {
            <div class="form-check form-check-inline">
                <input class="form-check-input categorycheck" type="checkbox" id="@item.CategoryId" value="@item.CategoryId" name="categoryList">
                <label class="form-check-label" for="inlineCheckbox1">@item.Name</label>
            </div>
        }
    }
    else {
        <div class="form-check form-check-inline">
            <input class="form-check-input categorycheck" type="checkbox" id="@item.CategoryId" value="@item.CategoryId" name="categoryList">
            <label class="form-check-label" for="inlineCheckbox1">@item.Name</label>
        </div>
    }

}

