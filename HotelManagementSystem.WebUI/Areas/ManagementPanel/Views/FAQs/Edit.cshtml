@model HotelManagementSystem.WebUI.Models.FAQ

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-12 col-lg-12">
        <div class="card border-lg-top-primary">
            <div class="card-body p-5">
                <div class="card-title d-flex align-items-center">
                    <div>
                        <i class="bx bx-help-circle mr-1 font-24 text-primary"></i>
                    </div>
                    <h4 class="mb-0 text-primary">Soru Düzenle</h4>
                </div>
                <hr>

                @using(Html.BeginForm("Edit", "FAQs", FormMethod.Post, new { @enctype = "multipart/form-data" })) {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.FAQId)

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-body">

                            <div class="form-group">
                                @Html.LabelFor(model => model.Question, "Soru", htmlAttributes: new { @class = "control-label" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group ">
                                @Html.LabelFor(model => model.Answer, "Cevap", htmlAttributes: new { @class = "control-label" })
                                @Html.TextArea("Answer", Model.Answer, 5, 0, new { @class = "form-control ckeditor", @id = "editor1" })
                                @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
                            </div> 

                            <div class="form-group">
                                @Html.Label("IsActive", "Durumu", htmlAttributes: new { @class = "control-label" })
                                <div class="input-group">
                                    <div class="checkbox">
                                        @Html.DropDownListFor(c => c.IsActive, new SelectList(
                                            new[]
                                            {
                                                new { Value = "true", Text = "Aktif" },
                                                new { Value = "false", Text = "Pasif" },
                                            },
                                            "Value",
                                            "Text",
                                            1
                                            ), new { @class = "form-control" })
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                            </div>


                            <button type="submit" class="btn btn-primary px-5">Kaydet</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
