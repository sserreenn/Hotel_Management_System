@model IEnumerable<HotelManagementSystem.WebUI.Models.Comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}



<div class="card radius-15">
    <div class="card-body">
        <div class="card-title">
            <h4 class="mb-0">@ViewBag.VillaTitle</h4>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col" width="10%">Adı Soyadı</th>
                        <th scope="col" width="15%">Email</th>
                        <th scope="col" width="10%">Telefon</th>
                        <th scope="col" width="30%">Yorum</th>
                        <th scope="col" width="5%">Servis Puanı</th>
                        <th scope="col" width="5%">Temizlik Puanı</th>
                        <th scope="col" width="5%">Genel Puan</th>
                        <th scope="col" width="5%">Kayıt Tarihi</th>
                        <th scope="col" width="5%">Durumu</th>
                        <th scope="col" width="10%"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model) {
                        <tr>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>
                                @if(item.Message.Length >= 60) {
                                    <p>@item.Message.Substring(0, 60)...</p>
                                }
                                else {
                                    <p>@item.Message</p>
                                }

                            </td>
                            <td>
                                @for(int i = 0; i < item.ServiceReview; i++) {
                                    <a class="text-primary"> <i class="fadeIn animated bx bx-star"></i> </a>
                                }
                            </td>
                            <td>
                                @for(int i = 0; i < item.CleaningReview; i++) {
                                    <a class="text-primary"> <i class="fadeIn animated bx bx-star"></i> </a>
                                }
                            </td>
                            <td>
                                @for(int i = 0; i < item.GeneralReview; i++) {
                                    <a class="text-primary"> <i class="fadeIn animated bx bx-star"></i> </a>
                                }
                            </td>
                            <td>@item.RegisterDate.Value.ToString("dd MMMM yyyy")</td>
                            <td>
                                @if(item.IsActive == true) {
                                    <p>Aktif</p>
                                }
                                else {
                                    <p>Pasif</p>
                                }
                            </td>
                            <td>
                                <a class="btn btn-secondary m-1" href="@Url.Action("Details", "Comments", new { id = item.CommentId })"> <i class="bx bx-info-circle"></i> Detay </a>
                                <a class="btn btn-warning m-1" href="@Url.Action("Edit", "Comments", new { id = item.CommentId })"> <i class="bx bx-pencil"></i> Düzenle </a>
                                @*<a class="btn btn-danger m-1" href="@Url.Action("Delete", "FAQs", new { id = item.FAQId })"> <i class="bx bx-trash"></i> Sil </a>*@
                            <td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

