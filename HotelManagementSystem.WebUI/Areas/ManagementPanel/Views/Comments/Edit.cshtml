@model HotelManagementSystem.WebUI.Models.Comment

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-12 col-lg-12">
        <div class="card border-lg-top-primary">
            <div class="card-body p-5">
                <div class="card-title d-flex align-items-center">
                    <div>
                        <i class="bx bxs-comment mr-1 font-24 text-primary"></i>
                    </div>
                    <h4 class="mb-0 text-primary">Yorum Düzenle</h4>
                </div>
                <hr>

                @using(Html.BeginForm("Edit", "Comments", FormMethod.Post, new { @enctype = "multipart/form-data" })) {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.CommentId)
                        @Html.HiddenFor(model => model.RoomId)

                        <div class="form-body">

                            <div class="form-group">
                                @Html.LabelFor(model => model.FullName, "Adı Soyadı", htmlAttributes: new { @class = "control-label" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PhoneNumber, "Telefon", htmlAttributes: new { @class = "control-label" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Message, "Yorum", htmlAttributes: new { @class = "control-label" })
                                <div class="input-group">
                                    @Html.TextAreaFor(model => model.Message, 5, 500, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    @Html.LabelFor(model => model.ServiceReview, "Servis Puanı", htmlAttributes: new { @class = "control-label" })
                                    <div class="input-group">
                                        @Html.EditorFor(model => model.ServiceReview, new { htmlAttributes = new { @class = "form-control", @placeholder = "Servis Puanı" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ServiceReview, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.LabelFor(model => model.CleaningReview, "Temizlik Puanı", htmlAttributes: new { @class = "control-label" })
                                    <div class="input-group">
                                        @Html.EditorFor(model => model.CleaningReview, new { htmlAttributes = new { @class = "form-control", @placeholder = "Temizlik Puanı" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.CleaningReview, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.LabelFor(model => model.GeneralReview, "Genel Puan", htmlAttributes: new { @class = "control-label" })
                                    <div class="input-group">
                                        @Html.EditorFor(model => model.GeneralReview, new { htmlAttributes = new { @class = "form-control", @placeholder = "Genel Puan" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.GeneralReview, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("IsActive", "Durumu", htmlAttributes: new { @class = "control-label" })
                                <div class="input-group">
                                    <div class="checkbox">
                                        @Html.DropDownListFor(c => c.IsActive, new SelectList(
                                            new[]
                                            {
                                                new { Value = "true", Text = "Aktif" },
                                                new { Value = "false", Text = "Pasif" },
                                            },
                                            "Value",
                                            "Text",
                                            1
                                            ), new { @class = "form-control" })
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                            </div>

                            <button type="submit" class="btn btn-primary px-5">Kaydet</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
