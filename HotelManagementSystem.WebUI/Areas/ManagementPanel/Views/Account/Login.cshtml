
@model HotelManagementSystem.WebUI.Areas.ManagementPanel.Models.ViewModels.LoginViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Otel Yönetim Paneli</title>
    <!--favicon-->
    <link rel="icon" href="~/Areas/ManagementPanel/Content/images/favicon-32x32.png" type="image/png" />
    <!-- loader-->
    <link href="~/Areas/ManagementPanel/Content/css/pace.min.css" rel="stylesheet" />
    <script src="assets/js/pace.min.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Areas/ManagementPanel/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&amp;family=Roboto&amp;display=swap" />
    <!-- Icons CSS -->
    <link rel="stylesheet" href="~/Areas/ManagementPanel/Content/css/icons.css" />
    <!-- App CSS -->
    <link rel="stylesheet" href="~/Areas/ManagementPanel/Content/css/app.css" />
</head>

<body class="bg-login">
    <!-- wrapper -->
    <div class="wrapper">
        <div class="section-authentication-login d-flex align-items-center justify-content-center">
            <div class="row">
                <div class="col-12 col-lg-10 mx-auto">
                    <div class="card radius-15">
                        <div class="row no-gutters">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5">
                                    <div class="text-center">
                                        <img src="~/Areas/ManagementPanel/Content/images/logovillamfethiye.png" width="200" alt="">
                                    </div>
                                    @using(Html.BeginForm("Login", "Account", FormMethod.Post, new { @enctype = "multipart/form-data" })) {
                                        @Html.AntiForgeryToken()


                                        <div class="form-group mt-4">
                                            <label>Email</label>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label>Şifre</label>
                                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Şifre", @type = "password" })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="btn-group mt-3 w-100">
                                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                                            <button type="button" class="btn btn-primary">
                                                <i class="lni lni-arrow-right"></i>
                                            </button>
                                        </div>
                                        <br>
                                        <br>
                                        <br>
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    }

                                    <hr>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <img src="~/Areas/ManagementPanel/Content/images/login-images/login-frent-img.jpg" class="card-img login-img h-100" alt="...">
                            </div>
                        </div>
                        <!--end row-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end wrapper -->
</body>


</html>