@model HotelManagementSystem.WebUI.Models.About
@{
    ViewBag.Title = "AboutUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main_bg">
    <div class="wrap">
        <div class="main">
            <div class="details">
                <h2>@Model.Title</h2>
                <div class="det_pic">
                    <img src="@Model.ImageURL" alt="" />
                </div>
                <div class="det_text">
                    <p class="para">@Html.Raw(Model.Description)</p> 
                    
                </div>
            </div>
        </div>
    </div>
</div>

